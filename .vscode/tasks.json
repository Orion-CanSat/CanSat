{
    "tasks": [
        {
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-C",
                "CanSat",
                "all",
                "-j",
                "-Otarget"
            ]
        },
        {
            "label": "Clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make.exe",
            "args": [
                "-C",
                "CanSat",
                "clean"
            ]
        }
    ],
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": "$gcc",
    "presentation": {
        "echo": true,
        "clear": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
    }
}